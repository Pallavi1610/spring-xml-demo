<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Pallavi"/>
        <constructor-arg name="gender" value="Female"/>
        <constructor-arg index="2" value="21" type="int"/>
    </bean>


    <!--<bean id="movie1" class="com.stackroute.domain.Movie" autowire="byType">
        <property name="movieName" value="Temper"></property>
    </bean>-->

    <bean id="movie" class="com.stackroute.domain.Movie" autowire="byName">
        <property name="movieName" value="Temper"></property>
    </bean>



</beans>